<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    tools:context="com.example.user2.PharmacyProduct.RegisterActivity">


    <EditText
        android:id="@+id/register_username_input"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/register_phone_number_input"
        android:layout_alignParentStart="true"
        android:layout_marginStart="85dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/input_design"
        android:hint="Name"
        android:inputType="text|textNoSuggestions"
        android:padding="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@android:color/white"

        android:textSize="19sp" />

    <EditText
        android:id="@+id/register_phone_number_input"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/register_password_input"
        android:layout_alignParentStart="true"
        android:layout_marginStart="85dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/input_design"
        android:hint="Phone Number"
        android:inputType="number"
        android:padding="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@android:color/white"
        android:textSize="19sp" />

    <EditText
        android:id="@+id/register_password_input"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="85dp"
        android:layout_marginBottom="380dp"
        android:background="@drawable/input_design"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@android:color/white"
        android:textSize="19sp" />

    <Button
        android:id="@+id/register_btn"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="84dp"
        android:layout_marginBottom="298dp"
        android:background="@drawable/buttons"
        android:padding="17dp"
        android:text="Create Account"

        android:textAllCaps="false"
        android:textColor="#FFF"
        android:textColorHint="@android:color/white"
        android:textSize="18sp" />


</RelativeLayout>